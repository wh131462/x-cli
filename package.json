{
    "name": "@eh/x-cli",
    "version": "1.0.2",
    "type": "module",
    "description": "A cli for project to create all needed.",
    "bin": {
        "x": "bin/x.js",
        "xi": "bin/xi.js",
        "xu": "bin/xu.js",
        "xr": "bin/xr.js"
    },
    "imports": {
        "#common/*": "./common/*"
    },
    "scripts": {
        "build": "node esbuild.config.js",
        "cli:publish": "npm run build && cd ./dist && npm publish",
        "cli:publish:update": "npm version patch && npm run cli:publish",
        "cli:unpublish": "npm unpublish --force @eh/x-cli",
        "prepare": "husky",
        "commit": "cz"
    },
    "author": "EternalHeart",
    "license": "ISC",
    "dependencies": {
        "chalk": "^5.3.0",
        "commander": "^12.0.0",
        "inquirer": "^9.2.17",
        "ora": "^8.0.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.2.2",
        "@commitlint/config-conventional": "^19.2.2",
        "commitizen": "^4.3.0",
        "commitlint": "^19.2.2",
        "cz-conventional-changelog": "^3.3.0",
        "esbuild": "^0.20.2",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.2",
        "prettier": "3.2.5"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
